# --- Docker Profiles ---
API_BUILD_TARGET=development
WEB_BUILD_TARGET=development
API_LOCAL_VOLUME=./api/src:/app/src
WEB_LOCAL_VOLUME=./web/src:/app/src

# --- Infrastructure ---
API_PORT=5071
WEB_PORT=3071
MONGO_PORT=27017
REDIS_PORT=6379

# --- Backend (API) ---
NODE_ENV=development
MONGO_URI=mongodb://mongo:27017/chat
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=chat:
JWT_ACCESS_SECRET=your_access_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d
RATE_LIMIT_POINTS=120
RATE_LIMIT_DURATION=60
WS_MAX_MESSAGE_SIZE=1000000
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3071

# --- Frontend (WEB) ---
NEXT_PUBLIC_API_URL=http://localhost:5071
NEXT_PUBLIC_WS_URL=http://localhost:5071/ws
